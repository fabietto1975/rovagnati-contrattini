<configuration xmlns="http://logging.apache.org/log4php/">
 
    <appender name="consoleAppender" class="LoggerAppenderConsole" />
    
    <appender name="fileAppender" class="LoggerAppenderDailyFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date [%logger] %message%newline" />
        </layout>
        <param name="file" value="d:\temp\marni-%s.log" />
        <param name="datePattern" value="Y-m-d" />
    </appender>
    
    <appender name="fileAppenderAC" class="LoggerAppenderDailyFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date [%logger] %message%newline" />
        </layout>
        <param name="file" value="d:\temp\DCB-%s.log" />
        <param name="datePattern" value="Y-m-d" />
    </appender>
    
    <appender name="fileAppenderLogin" class="LoggerAppenderDailyFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date SessionId : %sid ClientIP : %s{REMOTE_ADDR} [%logger] %message%newline" />
        </layout>
        <param name="file" value="d:\temp\DCBAccessLog-%s.log" />
        <param name="datePattern" value="Y-m-d" />
    </appender>
 
     <appender name="fileAppenderCU" class="LoggerAppenderDailyFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date ClientIP : %s{REMOTE_ADDR} %message%newline" />
        </layout>
        <param name="file" value="d:\temp\createUpdateLog-%s.log" />
        <param name="datePattern" value="Y-m-d" />
    </appender>   
 
    <root>
        <level value="DEBUG" /> 
        <appender_ref ref="consoleAppender" />
        <appender_ref ref="fileAppender" />
    </root>
    
    <logger name="ACCESS-CONTROL">
        <level value="INFO" /> 
        <appender_ref ref="consoleAppender" />
        <appender_ref ref="fileAppenderAC" />
    </logger>
    
    <logger name="LOGIN-CONTROL">
        <level value="INFO" /> 
        <appender_ref ref="consoleAppender" />
        <appender_ref ref="fileAppenderLogin" />
    </logger>
    
    <logger name="CREATE-UPDATE">
        <level value="INFO" /> 
        <appender_ref ref="consoleAppender" />
        <appender_ref ref="fileAppenderCU" />
    </logger>  
    
    
</configuration>
