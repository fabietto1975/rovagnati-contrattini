    public function readProfilo($id_cliente, $id_wave) {
        $sql = "SELECT * FROM v_profilo_cliente where id_cliente = :id_cliente";
        if ($id_wave != null){
            $sql .= ' and id_wave = :id_wave';
        }
        $stmt = $this->getPdo()->prepare($sql);
        $stmt->bindParam('id_cliente', $id_cliente);
        if ($id_wave != null){
            $stmt->bindParam('id_wave', $id_wave);
        }
        $stmt->execute();
        return $stmt->fetchAll();
    }

