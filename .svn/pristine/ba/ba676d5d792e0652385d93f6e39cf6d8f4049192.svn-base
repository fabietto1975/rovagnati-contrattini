    }

    public function readByID($id) {
        $stmt = $this->getPdo()->prepare("SELECT * FROM anagrafica_cliente a where a.id = :id order by rag_sociale");
        $stmt->bindParam('id',$id);
        $stmt->execute();
        return $stmt->fetchAll();
    }

}
